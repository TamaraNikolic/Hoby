<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.hobyles.hobyles.MainActivity"
    android:id="@+id/root"
    >

    <ImageView
        android:src="@drawable/logohoby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<RelativeLayout
    android:id="@+id/relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/imageView"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">
    <EditText
        android:inputType="textCapSentences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIme"
        android:textColor="#000"
        android:textSize="27dp"
        android:layout_toRightOf="@+id/telefon"
        android:layout_toEndOf="@+id/telefon" />
<TextView
    android:id="@+id/ime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:text="* Ime:   "
    android:textColor="@color/red_color"
    android:layout_marginTop="10dp"
    android:textSize="24dp"
    />
    <EditText
        android:inputType="textCapSentences"
        android:textColor="#000"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPrezime"
        android:layout_below="@+id/textViewIme"
        android:layout_toEndOf="@+id/textViewGdoine3"
        android:layout_alignLeft="@+id/textViewIme"
        android:layout_alignStart="@+id/textViewIme" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/textViewPrezime"
    android:text="* Priimek:"
    android:id="@+id/prezime"
    android:layout_below="@+id/textViewIme"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textColor="@color/red_color"
    android:layout_marginTop="10dp"
    android:textSize="24dp"
    />
    <EditText
        android:inputType="phone"
        android:textColor="#000"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTelefon"
        android:layout_below="@+id/textViewPrezime"
        android:layout_alignLeft="@+id/textViewPrezime"
        android:layout_alignStart="@+id/textViewPrezime" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/telefon"
    android:layout_below="@id/prezime"
    android:text="  Telefon: "
    android:textColor="@color/red_color"
    android:layout_marginTop="19dp"
    android:textSize="24dp"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmail"
        android:textColor="#000"
        android:textSize="24dp"
        android:layout_below="@+id/textViewTelefon"
        android:layout_alignLeft="@+id/textViewTelefon"
        android:layout_alignStart="@+id/textViewTelefon" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="* Email: "
        android:textColor="@color/red_color"
        android:textSize="24dp"
        android:layout_below="@+id/textViewTelefon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starost:"
        android:textColor="@color/red_color"
        android:textSize="24dp"
        android:id="@+id/textView5"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="do 25 let"
        android:id="@+id/textViewGodine1"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26-35 let "
        android:id="@+id/textViewGodine2"
        android:layout_below="@+id/textViewGodine1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36-45 let "
        android:id="@+id/textViewGdoine3"
        android:layout_below="@+id/textViewGodine2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="46-55 let "
        android:id="@+id/textViewGodine4"
        android:layout_below="@+id/textViewGdoine3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="od 56 let naprej"
        android:id="@+id/textViewGodine5"
        android:layout_below="@+id/textViewGodine4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spol:"
        android:textColor="@color/red_color"
        android:textSize="22dp"
        android:id="@+id/textView7"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewGodine5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kateri segment artiklov vas trenutno najbolj zanima?"
        android:id="@+id/textViewArtikal1"
        android:textColor="@color/red_color"
        android:textSize="24dp"
        android:layout_below="@+id/textViewMesto4"
      />
    <TextView
        android:id="@+id/textViewOpcija1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewArtikal1"
        android:text="1. Novo pohištvo"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/textViewOpcija2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOpcija1"
        android:text="2. Repromaterial za obnovo starega pohištva"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/textViewOpcija3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOpcija2"
        android:text="3. Repromaterial za izdelavo novega pohištva"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        />

    <TextView
       android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOpcija3"
        android:text="Z posredovanjem tega obrazca v našo bazo se strinjate, da lahko vaše podatke uporabimo v namene obveščanja o novostih in akcijah v našem podjetju."
        android:textColor="#000"
        android:textSize="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="pošlji"
        android:textSize="20dp"
        android:background="#6293ed"
        android:id="@+id/button"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Katera naša trgovina vam je najbližje:"
        android:id="@+id/blizina"
        android:textColor="@color/red_color"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Škofja Vas"
        android:id="@+id/textViewMesto1"
        android:layout_below="@+id/blizina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.Maribor "
        android:id="@+id/textViewMesto2"
        android:textSize="24dp"
        android:layout_alignTop="@+id/textViewMesto1"
        android:layout_toRightOf="@+id/textViewOpcija1"
        android:layout_toEndOf="@+id/textViewOpcija1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.Slovenske Konjice"
        android:id="@+id/textViewMesto3"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_alignTop="@+id/textViewMesto2"
        android:layout_toRightOf="@+id/textViewMesto5"
        android:layout_toEndOf="@+id/textViewMesto5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Nazarje"
        android:id="@+id/textViewMesto4"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_alignTop="@+id/textViewMesto5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Šmarje pri Jelšah"
        android:id="@+id/textViewMesto5"
        android:textColor="@color/color_text"
        android:textSize="24dp"
        android:layout_below="@+id/textViewMesto2"
        android:layout_toRightOf="@+id/textViewOpcija1"
        android:layout_toEndOf="@+id/textViewOpcija1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:text="Moški"
        android:textSize="22dp"
        android:id="@+id/textViewMoski"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textViewGodine5"
        android:layout_toEndOf="@+id/textViewGodine5" />

    <TextView
        android:textColor="@color/color_text"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Žensk"
        android:id="@+id/textViewYenski"
        android:layout_alignTop="@+id/textViewMoski"
        android:layout_toRightOf="@+id/textViewMesto2"
        android:layout_toEndOf="@+id/textViewMesto2" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="pobriši"
        android:textSize="20dp"
        android:background="#e44346"
        android:id="@+id/button2"
        android:layout_below="@+id/notification"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:textColor="@color/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tehnična podpora Prana 3stil, d.o.o."
        android:id="@+id/textView"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</RelativeLayout>

</ScrollView>